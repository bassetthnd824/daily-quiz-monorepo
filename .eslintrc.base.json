{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:daily-quiz",
                "onlyDependOnLibsWithTags": ["scope:shared", "type:api"]
              },
              {
                "sourceTag": "type:api",
                "onlyDependOnLibsWithTags": ["scope:shared", "type:core"]
              }
            ]
          }
        ]
      }
    }
  ]
}
