{
  "extends": ["next", "../../.eslintrc.base.json"],
  "ignorePatterns": [
    "!**/*",
    ".next/**/*",
    "**/*.js",
    "node_modules",
    "public",
    "dist",
    "tmp",
    "out-tsc",
    "coverage",
    "out"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@next/next/no-html-link-for-pages": ["error", "apps/daily-quiz/src"]
      }
    },
    {
      "files": ["*.d.ts"],
      "parserOptions": {
        "project": ["apps/daily-quiz/tsconfig.app.json"]
      },
      "settings": {
        "import/resolver": {
          "typescript": {
            "project": ["apps/daily-quiz/tsconfig.app.json"]
          }
        }
      }
    },
    {
      "files": ["src/**/*.ts", "src/**/*.tsx"],
      "parserOptions": {
        "project": ["apps/daily-quiz/tsconfig.app.json"]
      },
      "settings": {
        "import/resolver": {
          "typescript": {
            "project": ["apps/daily-quiz/tsconfig.app.json"]
          }
        }
      }
    }
  ]
}
